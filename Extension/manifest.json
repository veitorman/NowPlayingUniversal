{
  "manifest_version": 3,
  "name": "NowPlayingUniversal Bridge",
  "version": "1.0",
  "description": "Sends MediaSession metadata to NowPlayingUniversal overlay.",
  "permissions": [ "scripting" ],
  "host_permissions": [
    "<all_urls>",
    "http://127.0.0.1:32145/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [ "<all_urls>" ],
      "js": [ "content.js" ],
      "run_at": "document_idle"
    }
  ]
}
